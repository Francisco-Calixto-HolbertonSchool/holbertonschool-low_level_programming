CC=gcc
SRC = main.c holberton.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = holberton
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean: $(RM) $(NAME)
	$(RM) *~ $(NAME)

oclean: $(OBJ) $(RM)
	$(RM) $(OBJ)

fclean: $(OBJ) $(RM) $(NAME)
	$(RM) *~ $(OBJ) $(NAME)

re: $(SRC) $(CC) $(NAME)
	$(CC) $(SRC) -o $(NAME)
